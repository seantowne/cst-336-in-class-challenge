<%- include ('templates/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1> SEARCH RESULTS </h1>
        <button class='btn btn-info' onclick='location.href="/";'>Search Again</button>
    </div>

    <ul id='movies-list'>
        <% data.Search.forEach(function(movie){%>
	        <li> 
	            <img class='poster' src=<%=movie.Poster%> />
	            <div>
                    <h5><%=movie.Title%></h5>
                    <p><%=movie.Year%></p>
                </div>
	        </li>	
        <% }); %>
    <ul>
</div>

<%- include ('templates/footer'); -%>